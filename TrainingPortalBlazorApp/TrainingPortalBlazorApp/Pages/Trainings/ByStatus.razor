@page "/trainees/bystatus/{trainingid}/{status}"

<h2 class="mb-4 text-primary">Trainees - Status: @status</h2>

<div class="d-flex justify-content-between align-items-center mb-3">
    <h4 class="text-secondary">List of Trainees</h4>
    <a href="/trainees/@trainingid" class="btn btn-outline-primary">⬅ Back to Training Trainees</a>
</div>

@if (trainees == null)
{
    <div class="alert alert-info">
        <em>Loading trainee data...</em>
    </div>
}
else
{
    <table class="table table-striped table-bordered shadow-sm">
        <thead class="table-dark">
            <tr>
                <th>Training ID</th>
                <th>Employee ID</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var trainee in trainees)
            {
                <tr>
                    <td>@trainee.TrainingId</td>
                    <td>@trainee.EmpId</td>
                    <td>@trainee.Status</td>
                </tr>
            }
        </tbody>
    </table>
}