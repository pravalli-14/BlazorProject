
@page "/trainees/details/{trainingid}/{empid}"

<h2 class="mb-4 text-primary">Trainee Details</h2>

<div class="card shadow-sm mb-4">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Training ID</dt>
            <dd class="col-sm-9">@trainee.TrainingId</dd>

            <dt class="col-sm-3">Employee ID</dt>
            <dd class="col-sm-9">@trainee.EmpId</dd>

            <dt class="col-sm-3">Status</dt>
            <dd class="col-sm-9">@trainee.Status</dd>
        </dl>
    </div>
</div>

<a href="/trainees/@trainingid" class="btn btn-outline-primary">⬅ Back to List</a>