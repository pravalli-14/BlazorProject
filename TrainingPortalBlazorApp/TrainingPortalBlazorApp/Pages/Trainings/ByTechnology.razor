
@page "/training/bytechnology/{techid}"

<h2 class="mb-4 text-primary">Trainings - Technology ID: @techid</h2>

<div class="d-flex justify-content-between align-items-center mb-3">
    <h4 class="text-secondary">Scheduled Trainings</h4>
    <a href="/training" class="btn btn-outline-primary">⬅ Back to Training List</a>
</div>

@if (trainings == null)
{
    <div class="alert alert-warning">
        <em>No trainings scheduled for this technology.</em>
    </div>
}
else
{
    <table class="table table-striped table-bordered shadow-sm">
        <thead class="table-dark">
            <tr>
                <th>Training ID</th>
                <th>Trainer ID</th>
                <th>Technology ID</th>
                <th>Start Date</th>
                <th>End Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var training in trainings)
            {
                <tr>
                    <td>@training.TrainingId</td>
                    <td>@training.TrainerId</td>
                    <td>@training.TechnologyId</td>
                    <td>@training.StartDate.ToShortDateString()</td>
                    <td>@training.EndDate.ToShortDateString()</td>
                </tr>
            }
        </tbody>
    </table>
}