@page "/trainer"

<h2 class="mb-4 text-primary">Trainer Directory</h2>

<div class="d-flex justify-content-between align-items-center mb-3">
    <h4 class="text-secondary">List of Trainers</h4>
    <a href="/trainer/create" class="btn btn-success">➕ Create New</a>
</div>

@if (trainers == null)
{
    <div class="alert alert-info">
        <em>Loading trainer data...</em>
    </div>
}
else
{
    <table class="table table-striped table-bordered shadow-sm">
        <thead class="table-dark">
            <tr>
                <th>Trainer ID</th>
                <th>Name</th>
                <th>Type</th>
                <th>Email</th>
                <th>Phone No</th>
                <th colspan="4" class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var trainer in trainers)
            {
                <tr>
                    <td>@trainer.TrainerId</td>
                    <td>@trainer.TrainerName</td>
                    <td>@trainer.TrainerType</td>
                    <td>@trainer.TrainerEmail</td>
                    <td>@trainer.TrainerPhoneNo</td>
                    <td><a href="/trainer/details/@trainer.TrainerId" class="btn btn-info btn-sm">Details</a></td>
                    <td><a href="/trainer/edit/@trainer.TrainerId" class="btn btn-warning btn-sm">Edit</a></td>
                    <td><a href="/trainer/delete/@trainer.TrainerId" class="btn btn-danger btn-sm">Delete</a></td>
                    <td><a href="/trainer/bytype/@trainer.TrainerType" class="btn btn-secondary btn-sm">By Type</a></td>
                </tr>
            }
        </tbody>
    </table>
}