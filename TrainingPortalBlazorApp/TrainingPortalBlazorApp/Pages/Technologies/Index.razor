@page "/technology"

<h2 class="mb-4 text-primary">Technology Catalog</h2>

<div class="d-flex justify-content-between align-items-center mb-3">
    <h4 class="text-secondary">List of Technologies</h4>
    <a href="/technology/create" class="btn btn-success">➕ Create New</a>
</div>

@if (technologies == null)
{
    <div class="alert alert-info">
        <em>Loading technology data...</em>
    </div>
}
else
{
    <table class="table table-striped table-bordered shadow-sm">
        <thead class="table-dark">
            <tr>
                <th>Technology ID</th>
                <th>Name</th>
                <th>Level</th>
                <th>Duration</th>
                <th colspan="4" class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var tech in technologies)
            {
                <tr>
                    <td>@tech.TechnologyId</td>
                    <td>@tech.TechnologyName</td>
                    <td>@tech.Level</td>
                    <td>@tech.Duration</td>
                    <td><a href="/technology/details/@tech.TechnologyId" class="btn btn-info btn-sm">Details</a></td>
                    <td><a href="/technology/edit/@tech.TechnologyId" class="btn btn-warning btn-sm">Edit</a></td>
                    <td><a href="/technology/delete/@tech.TechnologyId" class="btn btn-danger btn-sm">Delete</a></td>
                    <td><a href="/technology/bylevel/@tech.Level" class="btn btn-secondary btn-sm">By Level</a></td>
                </tr>
            }
        </tbody>
    </table>
}