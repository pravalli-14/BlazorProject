
@page "/technology/delete/{techid}"

<h2 class="mb-4 text-danger">Delete Technology</h2>

<div class="card shadow-sm mb-4">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Technology ID</dt>
            <dd class="col-sm-9">@technology.TechnologyId</dd>

            <dt class="col-sm-3">Name</dt>
            <dd class="col-sm-9">@technology.TechnologyName</dd>

            <dt class="col-sm-3">Level</dt>
            <dd class="col-sm-9">@technology.Level</dd>

            <dt class="col-sm-3">Duration</dt>
            <dd class="col-sm-9">@technology.Duration</dd>
        </dl>
    </div>
</div>

<div class="d-flex gap-2">
    <button class="btn btn-danger" @onclick="DeleteTechnology">🗑️ Confirm Delete</button>
    <a href="/technology" class="btn btn-outline-primary">⬅ Back to List</a>
</div>