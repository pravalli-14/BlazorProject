@page "/register"

<h2 class="mb-4 text-primary">Register</h2>

<div class="card shadow-sm p-4" style="max-width: 400px;">
    <div class="mb-3">
        <label class="form-label">User ID</label>
        <input type="text" class="form-control" @bind="userId" placeholder="Choose a user ID" />
    </div>

    <div class="mb-3">
        <label class="form-label">Password</label>
        <input type="password" class="form-control" @bind="password" placeholder="Enter password" />
    </div>

    <div class="mb-3">
        <label class="form-label">Retype Password</label>
        <input type="password" class="form-control" @bind="retypePassword" placeholder="Confirm password" />
    </div>

    @if (!string.IsNullOrEmpty(ErrorMessage))
    {
        <div class="alert alert-danger">@ErrorMessage</div>
    }

    <button class="btn btn-success w-100" @onclick="RegisterAsync">📝 Register</button>
</div>

